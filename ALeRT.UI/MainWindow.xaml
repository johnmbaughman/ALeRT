<Window x:Class="ALeRT.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ALeRT" MinHeight="350" MinWidth="525">
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Background="Gray">
                <TextBox Name="queryTB" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" TextWrapping="NoWrap" Margin="5,5,0,5" Width="300" VerticalContentAlignment="Center"/>
                <Button Name="queryButton" Content="Query" Grid.Column="0" Grid.Row="0" Margin="5,5,0,5" Width="55" VerticalContentAlignment="Center" Click="queryButton_Click"/>
                <Button Name="browseButton" Content="Browse" Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" Width="55" VerticalContentAlignment="Center"/>
            </StackPanel>
        <TextBox Name="resultsTB" Margin="6" Grid.Row="1" TextWrapping="Wrap"/>
    </Grid>
</Window>
